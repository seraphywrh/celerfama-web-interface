<%- include partials/header %>



<div class="container-fluid">
	<div class="row no-gutter">
		<div class="col-xl-5 col-lg-5 col-md-5 col-sm-12 col-xm-12">
			<div id="identify-patient">
				<form action="/record" method="POST">
				    <div class="form-group">
					    <label for="usr">Patient Name:</label>
				      	<input type="text" class="form-control" name="patientName" id="usr" placeholder="Full Name">
				    </div>
				    <div class="form-group">
				      	<label for="usr">Patient DOB:</label>
				     	<input type="text" class="form-control" name="patientDOB" id="usr" placeholder="MM/DD/YYYY">
				    </div>
				    <div class="form-group">
                    	<button class="btn btn-lg btn-primary btn-block">Enter</button>
                	</div>
				</form>
			</div>

			<div class="btn-group" role="group" aria-label="...">
				<div class="btn-group" role="group">
					<button type="button" class="btn btn-circle" id="startRecord">
						<span class="glyphicon glyphicon-play" aria-hidden="true"></span>
					</button>
				</div>

				<div class="btn-group" role="group">
					<button type="button" class="btn btn-circle" id="pauseRecord">
						<span class="glyphicon glyphicon-pause"  aria-hidden="true"></span>
					</button>
				</div>

				<div class="btn-group" role="group">
					<button type="button" class="btn btn-circle" id="stopRecord">
						<span class="glyphicon glyphicon-stop" aria-hidden="true"></span>
					</button>
				</div>
			</div>
		</div>

		<div class="col-xl-5 col-lg-5 col-md-5 col-sm-12 col-xm-12">
			<div class="panel panel-default">
			  <div class="panel-heading">Transcription</div>
			  <div id = "transcription-panel" class="panel-body"></div>
			</div>
		</div>
	</div>
</div>




<div class="col-xl-5 col-lg-5 col-md-5 col-sm-12 col-xm-12">
	<div class="panel panel-default">
	  <div class="panel-heading">Key entities in the transcription</div>
	  <div id = "analysis-panel" class="panel-body"></div>
	</div>
</div>


<h3>Waiting for the transcription to finish... ...</h3>


<script src="/js/recorder.js" type="text/javascript"></script>

<% include partials/footer %>
